extends layout

block content
  h1 Movies


  if err
    div.alert.alert-danger= err

  if msg
    div.alert.alert-success= msg

  .row
    .col-8
      h2 Current movies
      div
        each s in songs
          form.p-2(action="/songs/delete" method="POST")
            input.flex-shrink-1.m-1(style="min-width:20px" type="hidden" name="id" value=s.id)

            label.form-group Name:
              input.form-control.m-1(style="min-width:20px" type="text" name="title" value=s.title)
            label.form-group Genre:
              input.form-control.m-1(style="min-width:20px" type="text" name="genre" value=s.genre)
            label.form-group Release Year:
              input.form-control.m-1(style="min-width:20px" type="text" name="release_year" value=s.release_year)
            .form-group
              button.m-1.btn.btn-danger(type="submit" formaction="/songs/delete") X
              button.m-1.btn.btn-secondary(type="submit" formaction="/songs/update") Update
            hr

      //nav(aria-label="Page navigation example")

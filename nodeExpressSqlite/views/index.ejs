<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Airbnb Application</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <nav></nav>

      <main class="row">
        <h1>Database CRUD application</h1>
       
          <div>
            We can create, read, delete, update District Table and HostResponseTime Table,
            Review Table and RoomType Table.
          </div>

          <div class="row">
             <div class="col-4">
              <h2>District</h2>
              <ul>
                <% districts.forEach(function (district) { %>
                  <li><a href="/districts/<%=district.districtId %>"><%= district.districtId %> ðŸ‘‰ <%= district.districtName %></a>
                    <form action="/districts/delete" method="POST">
                      <input type="hidden" name="districtId" value="<%= district.districtId %>">
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                  </li>
                <% })%>
              </ul>
            </div>

             <div class="col-4">
          <h2>HostResponseTime</h2>
          <ul>
            <% hostresponsetimes.forEach(function (hostResponseTime) { %>
            <li><a href="/hostresponsetimes/<%=hostResponseTime.hostResponseTimeId %>"><%= hostResponseTime.hostResponseTimeId %> ðŸ‘‰ <%= hostResponseTime.hostResponseTime %></a>
              <form action="/hostresponsetimes/delete" method="POST">
                <input type="hidden" name="hostResponseTimeId" value="<%= hostResponseTime.hostResponseTimeId %>">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </li>
            <% })%>
          </ul>
            </div>

            <div class="col-4">
              <h2>Create District</h2>
              <form action="/districts/create" method="POST">
                <div>
                  <label class="form-label"
                    >New District Name:
                    <input
                      required="true"
                      name="districtName"
                      type="text"
                      class="form-control"
                  /></label>
              </div>
           

            <button type="submit" class="btn btn-primary">Create</button>
          </form>
         


         
              <h2>Create Host Response Time</h2>
          <form action="/hostresponsetimes/create" method="POST">
            <div>
                <label class="form-label"
                >New Host Response Time:
                  <input
                          required="true"
                          name="hostResponseTime"
                          type="text"
                          class="form-control"
                  /></label>
              </div>

              <button type="submit" class="btn btn-primary">Create</button>
            </form>
              </div>
       


      

          <div class="col-4">
        <h2>Room Types</h2>
          <ul>
            <% roomTypes.forEach(function (r) { %>

            <li><a href="/roomType/<%= r.roomTypeID %>">
              <%= r.roomTypeID %> ðŸ‘‰ <%= r.roomTypeName %></a>
              <form action="/roomType/delete" method="POST">
                <input type="hidden" name="roomTypeID" value="<%= r.roomTypeID %>">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </li>

            <% })%>
          </ul>
        </div>

         <div class="col-4">
        <h2>Reviews</h2>
           <ul>
            <% reviews.forEach(function (f) { %>

              <li><a href="/review/<%= f.reviewID %>">
              <%= f.reviewID %> ðŸ‘‰ <%=f.lastReviewTime %></a>


              <form action="/review/delete" method="POST">
                <input type="hidden" name="reviewID" value="<%= f.reviewID %>">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </li>
                 <% })%>
          </ul>
          </div>

         
       <div class="col-4">
          
           <h2>Create Review</h2>

          <form action="/review/create" method="POST">
            <div>
              <label class="form-label"
                >lastReviewTime:
                <input
                  required="true"
                  name="lastReviewTime"
                  type="text"
                  class="form-control"
              /></label>
            </div>


          <div>
              <label class="form-label"
                >Review Num:
                <input
                  required="true"
                  name="reviewNum"
                  type="text"
                  class="form-control"
                  value="1"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Review Score Rating:
                <input
                  required="true"
                  name="reviewScoreRating"
                  type="number"
                  class="form-control"
                  value="5"
              /></label>
            </div>
            <div>
              <label class="form-label"
               >Review Score Accuracy:
                <input
                  required="true"
                  name="reviewScoreAccuracy"
                  type="number"
                  class="form-control"
                  value="5"
              /></label>
            </div>
            <div>
            <label class="form-label"
              >Review Score Cleanliness:
              <input
                required="true"
                name="reviewScoreCleanliness"
                 type="number"
                  class="form-control"
                  value="5"
            /></label>
          </div>

            <div>
              <label class="form-label"
                >Review Score Checkin:
                <input
                  required="true"
                  name="reviewScoreCheckin"
                   type="number"
                  class="form-control"
                  value="5"
              /></label>
            </div>

            <div>
              <label class="form-label"
                >Review Score Location:
                <input
                  required="true"
                  name="reviewScoreLocation"
                   type="number"
                  class="form-control"
                  value="5"
              /></label>
            </div>

            <div>
              <label class="form-label"
                >Review Score Value:
                <input
                  required="true"
                  name="reviewScoreValue"
                  type="number"
                  class="form-control"
                  value="5"
              /></label>
            </div>

            <div>
              <label class="form-label"
                >Review Per Month:
                <input
                  required="true"
                  name="reviewPerMonth"
                  type="number"
                  class="form-control"
                  value="5"
              /></label>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
          </form>


           <h2>Create Room Type</h2>

          <form action="/roomType/create" method="POST">
            <div>
              <label class="form-label"
                >Room Type Name:
                <input
                  required="true"
                  name="roomTypeName"
                  type="text"
                  class="form-control"
              /></label>
        </div>
           <button type="submit" class="btn btn-primary">Create</button>
          </form>
        </div>



        <!-- /.col-4 -->
      </main>

      <footer>
        <div class="row">
          <div class="col-4">About</div>
          <div class="col-4">Made By Zejun Liu && Tingting Jiang</div>
          <div class="col-4">Copyleft Â©</div>
        </div>
      </footer>
    </div>
  </body>
</html>
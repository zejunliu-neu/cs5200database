      //    li(class="page-item")
      //      a(class="page-link" href="/songs?page=1") 1
      //
      //    li(class="page-item")
      //      a(class="page-link" href="/songs?page=2") 2
      //    li(class="page-item")
      //      a(class="page-link" href="/songs?page=3") 3

    .col-4
      h2 Create new movie

      form(action="/songs/create", method="post")
        .form-group
          label Name
            input.form-control(type="text", name="title")

        .form-group
          label Genre
            input.form-control(type="text", name="genre")
        .form-group
          label Release Year
            input.form-control(type="number", name="release_year")

        button.btn.btn-primary(type="submit") Create New Movie





















